    </div>
  </div>
</div>

<div id="page">

  <div id="tweets">

    <div id="tweet_head">
      Latest Tweets
    </div>

    <% if @tweets.size>0
         @tweets.each do |t|
    %>
            <div id="tweet">

              <div id="tweet_user"><%= t.name %></div>
              <div id="tweet_message"><%= t.message %></div>

            </div>
        <% end %>
           <%= will_paginate @tweets %>
        <% else %>
        <div id="tweet">
          No tweets to display! :(
        </div>
    <%
       end
    %>
